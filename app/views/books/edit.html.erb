<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch,local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'UpdateBook' %>
<% end %>

<%= link_to"show",book_path(@book)%>|<%= link_to"back","/books"%>
